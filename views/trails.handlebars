{{> header}}

<div class="trails-container">
  <h1>{{pageTitle}}</h1>
  
  {{#if trails.length}}
    <ul class="trail-list">
      {{#each trails}}
        <li class="trail-item" data-trail-id="{{this.trail_name}}">
          <h2>{{this.trail_name}}</h2>
          <p>Difficulty: {{this.difficulty}}</p>
          <p>Rating: {{this.trail_rating}}</p>
          <p>Elevation Gain: {{this.elevationGain}}</p>
          <p>Length: {{this.length}}</p>
          <p>Description: {{this.description}}</p>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>No trails available.</p>
  {{/if}}
</div>

{{> footer}}